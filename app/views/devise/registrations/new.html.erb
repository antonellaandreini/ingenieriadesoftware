<div class="row">
 <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Registrarse</h3>
      </div>
      <div class="panel-body">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
            <%= f.label :email, "Email" %></br>
            <%= f.email_field :email, required: true, autofocus: true, class:"form-control" %>

    </div>
    <div class="form-group">
            <%= f.label :nombre, "Nombre" %></br>
            <%= f.text_field :nombre, required: true, autofocus: true, class:"form-control" %>

    </div>
    <div class="form-group">
        <%= f.label :apellido, "Apellido" %></br>
        <%= f.text_field :apellido,required: true, autofocus: true, class:"form-control" %>

    </div>
    <div class="form-group">
        <%= f.label :edad, "Edad" %></br>
        <%= f.number_field :edad,required: true,:in => 18..150, autofocus: true, class:"form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password, "Contraseña" %></br>
        <% if @minimum_password_length %>
       		 <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <%= f.password_field :password, required: true, autocomplete: "off", class:"form-control" %>

    </div>
    <div class="form-group">
        <%= f.label :"password_confirmation", "Confirmar Contraseña" %></br>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class:"form-control" %>

    </div>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Recuérdame %>
    </div>
    <%= f.submit "Registrarse",:class=>'btn btn-warning' %>
  <% end %>
  <%= render "devise/shared/links" %>
    <%= link_to "Atras", :back %>
</div>

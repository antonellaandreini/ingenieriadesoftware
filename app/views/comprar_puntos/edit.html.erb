<div class="row">
 <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Comprar puntos</h3>
      </div>
      <div class="panel-body">
  <%= form_tag '/comprar_puntos/actualizar' ,method: 'get' do %>
  <div class="form-group">
    <%= label_tag :nombre, 'Nombre del titular de la tarjeta' %>
    <%= text_field_tag 'nombre',nil, placeholder: 'Nombre', required: true , class:"form-control"%>
  </div>
  <div class="form-group">
  <%= label_tag :tipo_tarjeta, 'Seleccione su tipo de tarjeta' %>
  <%= select_tag :tipo_tarjeta, options_for_select([['Visa'],['MasterCard']]) %>
</div>
<div class="form-group">
  <%= label_tag :tarjeta, 'Número de tarjeta' %>
  <%= text_field_tag 'tarjeta',nil, placeholder: 'XXXXXXXXXXXXXXXX', required: true, maxlength: 16,size: 16, class:"form-control" %>
</div>
  <%= label_tag :codigo, 'Código secreto de la tarjeta' %>
  <%= text_field_tag 'codigo',nil, placeholder:'XXX', required: true, maxlength: 3,size: 3, class:"form-control"%>
  <div class="form-group">
    <%= label_tag :fecha_expiracion, 'Fecha de expiración de la tarjeta' %>
    <div class="form-group">
      <%= select_month(Date.today, use_month_numbers: true) %>
      <%= select_year(Date.today, start_year: 2016, end_year: 2099) %>
    </div>
  </div>
  <div class="form-group" >
    <%= label_tag :cantidad, 'Puntos a comprar' %>
    <div class="form-group">
    <%= select_tag :cantidad, options_for_select([['1 punto - $2',1], ['5 puntos - $8',5],['10 puntos -$12',10]]) %>
  </div>
  </div>

  <div class="form-group"><%= submit_tag 'Guardar', class:'btn btn-warning' %></div>
  <% end %>
</div>
